<odoo>

    <!-- ========================================================= -->
    <!-- MENÚ PRINCIPAL -->
    <!-- ========================================================= -->

    <menuitem id="menu_restaurante_root"
              name="Gestión Restaurante"
              sequence="1"/>

    <!-- ========================================================= -->
    <!-- ACCIONES -->
    <!-- ========================================================= -->

    <!-- Acción: Menús -->
    <record id="action_menus" model="ir.actions.act_window">
        <field name="name">Menús</field>
        <field name="res_model">gestion_restaurante_marcos.menu</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Acción: Platos -->
    <record id="action_platos" model="ir.actions.act_window">
        <field name="name">Platos</field>
        <field name="res_model">gestion_restaurante_marcos.plato</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Acción: Ingredientes -->
    <record id="action_ingredientes" model="ir.actions.act_window">
        <field name="name">Ingredientes</field>
        <field name="res_model">gestion_restaurante_marcos.ingrediente</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Acción: Categorías -->
    <record id="action_categorias" model="ir.actions.act_window">
        <field name="name">Categorías</field>
        <field name="res_model">gestion_restaurante_marcos.categoria</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Acción: Chefs -->
    <record id="action_chefs" model="ir.actions.act_window">
        <field name="name">Chefs</field>
        <field name="res_model">gestion_restaurante_marcos.chef</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- ========================================================= -->
    <!-- MENÚS LATERALES -->
    <!-- ========================================================= -->

    <menuitem id="menu_restaurante_menus"
              name="Menús"
              parent="menu_restaurante_root"
              action="action_menus"
              sequence="10"/>

    <menuitem id="menu_restaurante_platos"
              name="Platos"
              parent="menu_restaurante_root"
              action="action_platos"
              sequence="20"/>

    <menuitem id="menu_restaurante_ingredientes"
              name="Ingredientes"
              parent="menu_restaurante_root"
              action="action_ingredientes"
              sequence="30"/>

    <menuitem id="menu_restaurante_categorias"
              name="Categorías"
              parent="menu_restaurante_root"
              action="action_categorias"
              sequence="40"/>

    <menuitem id="menu_restaurante_chefs"
              name="Chefs"
              parent="menu_restaurante_root"
              action="action_chefs"
              sequence="50"/>

</odoo>
