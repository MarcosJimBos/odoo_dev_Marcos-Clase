<odoo>

    <!-- =============================== -->
    <!-- ACCIÓN CHEFS -->
    <!-- =============================== -->
    <record id="action_chef" model="ir.actions.act_window">
        <field name="name">Chefs</field>
        <field name="res_model">gestion_restaurante_marcos.chef</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- =============================== -->
    <!-- LISTA CHEFS -->
    <!-- =============================== -->
    <record id="view_chef_list" model="ir.ui.view">
        <field name="name">gestion.chef.list</field>
        <field name="model">gestion_restaurante_marcos.chef</field>
        <field name="arch" type="xml">
            <tree string="Chefs">
                <field name="nombre"/>
                <field name="especialidad"/>
                <field name="platos_asignados" widget="one2many_count" string="Nº Platos"/>
            </tree>
        </field>
    </record>

    <!-- =============================== -->
    <!-- FORMULARIO CHEF -->
    <!-- =============================== -->
    <record id="view_chef_form" model="ir.ui.view">
        <field name="name">gestion.chef.form</field>
        <field name="model">gestion_restaurante_marcos.chef</field>
        <field name="arch" type="xml">
            <form string="Chef">
                <sheet>

                    <group>
                        <field name="nombre"/>
                        <field name="especialidad"/>
                    </group>

                    <group string="Platos asignados">
                        <field name="platos_asignados">
                            <tree>
                                <field name="nombre"/>
                                <field name="categoria"/>
                                <field name="precio"/>
                            </tree>
                        </field>
                    </group>

                </sheet>
            </form>
        </field>
    </record>

    <!-- =============================== -->
    <!-- MENÚ LATERAL -->
    <!-- =============================== -->
    <menuitem
        id="menu_chef"
        name="Chefs"
        parent="menu_gestion_restaurante_marcos"
        action="action_chef"/>

</odoo>
