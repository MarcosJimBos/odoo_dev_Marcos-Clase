<odoo>

    <!-- =============================== -->
    <!-- ACCIÓN INGREDIENTES -->
    <!-- =============================== -->
    <record id="action_ingrediente" model="ir.actions.act_window">
        <field name="name">Ingredientes</field>
        <field name="res_model">gestion_restaurante_marcos.ingrediente</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- =============================== -->
    <!-- LISTA INGREDIENTES -->
    <!-- =============================== -->
    <record id="view_ingrediente_list" model="ir.ui.view">
        <field name="name">gestion.ingrediente.list</field>
        <field name="model">gestion_restaurante_marcos.ingrediente</field>
        <field name="arch" type="xml">
            <tree string="Ingredientes">
                <field name="nombre"/>
                <field name="es_alergeno"/>
                <field name="descripcion"/>
            </tree>
        </field>
    </record>

    <!-- =============================== -->
    <!-- FORMULARIO INGREDIENTE -->
    <!-- =============================== -->
    <record id="view_ingrediente_form" model="ir.ui.view">
        <field name="name">gestion.ingrediente.form</field>
        <field name="model">gestion_restaurante_marcos.ingrediente</field>
        <field name="arch" type="xml">
            <form string="Ingrediente">
                <sheet>

                    <group>
                        <field name="nombre"/>
                        <field name="es_alergeno"/>
                    </group>

                    <group>
                        <field name="descripcion"/>
                    </group>

                </sheet>
            </form>
        </field>
    </record>

    <!-- =============================== -->
    <!-- MENÚ LATERAL -->
    <!-- =============================== -->
    <menuitem
        id="menu_ingrediente"
        name="Ingredientes"
        parent="menu_gestion_restaurante_marcos"
        action="action_ingrediente"/>

</odoo>
