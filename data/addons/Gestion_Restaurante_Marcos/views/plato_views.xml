<odoo>
   <!-- LISTA -->
<record id="view_plato_list" model="ir.ui.view">
    <field name="name">gestion.plato.list</field>
    <field name="model">gestion_restaurante_marcos.plato</field>
    <field name="arch" type="xml">
        <list string="Platos">
            <field name="nombre"/>
            <field name="categoria"/>
            <field name="precio"/>
            <field name="disponible"/>
        </list>
    </field>
</record>


    <!-- FORMULARIO -->
    <record id="view_plato_form" model="ir.ui.view">
        <field name="name">gestion.plato.form</field>
        <field name="model">gestion_restaurante_marcos.plato</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="nombre"/>
                        <field name="categoria"/>
                        <field name="precio"/>
                        <field name="disponible"/>
                        <field name="tiempo_preparacion"/>
                        <field name="menu"/>
                        <field name="rel_ingredientes" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
