<odoo>
    <record id="view_ing_list" model="ir.ui.view">
        <field name="name">gestion.ingrediente.list</field>
        <field name="model">gestion_restaurante_marcos.ingrediente</field>
        <field name="arch" type="xml">
            <list>
                <field name="nombre"/>
                <field name="es_alergeno"/>
            </list>
        </field>
    </record>

    <record id="view_ing_form" model="ir.ui.view">
        <field name="name">gestion.ingrediente.form</field>
        <field name="model">gestion_restaurante_marcos.ingrediente</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="nombre"/>
                        <field name="es_alergeno"/>
                        <field name="descripcion"/>
                    </group>

                    <group string="Platos que usan este ingrediente">
                        <field name="platos_ids" widget="many2many_tags"/>
                    </group>

                </sheet>
            </form>
        </field>
    </record>
</odoo>

