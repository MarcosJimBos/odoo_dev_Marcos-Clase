<odoo>

    <!-- VISTA LISTA -->
   <record id="view_task_list" model="ir.ui.view">
    <field name="name">gestor.task.list</field>
    <field name="model">gestor_tareas_marcos.task</field>
    <field name="arch" type="xml">
        <list string="Tareas">
            <field name="codigo"/>
            <field name="nombre"/>
            <field name="proyecto"/>
            <field name="sprint_id"/>
            <field name="historia"/>
            <field name="fecha_inicio"/>
            <field name="fecha_fin"/>
            <field name="finalizado"/>
        </list>
    </field>
</record>

    <!-- VISTA FORMULARIO -->
   <record id="view_task_form" model="ir.ui.view">
    <field name="name">gestor.task.form</field>
    <field name="model">gestor_tareas_marcos.task</field>
    <field name="arch" type="xml">
        <form string="Tarea">
            <sheet>

                
                <group>
                    <field name="codigo"/>
                    <field name="nombre"/>
                    <field name="finalizado"/>
                </group>

                
                <group>
                    <field name="fecha_inicio"/>
                    <field name="fecha_fin"/>
                </group>

                
                <group>
                    <field name="descripcion"/>
                </group>

               
                <group>
                    <field name="sprint_id"/>
                    <field name="historia"/>
                    <field name="proyecto"/>
                </group>

                
                <group>
                    <field name="tecnologias" widget="many2many_tags"/>
                </group>

            </sheet>
        </form>
    </field>
</record>


</odoo>
